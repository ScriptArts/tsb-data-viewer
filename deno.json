{
    "tasks": {
        "dev": "deno run --node-modules-dir -A npm:vite",
        "build": "deno run --node-modules-dir -A npm:vite build",
        "cache": "deno cache --reload src/main.ts",
        "deploy": "deno run --node-modules-dir -A npm:gh-pages -d dist"
    },
    "compilerOptions": {
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "dom.asynciterable",
            "dom.extras",
            "deno.ns"
        ],
        "types": [
            "./src/shims.d.ts"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "npm:solid-js@^1.6.9"
    },
    "importMap": "import_map.json"
}
